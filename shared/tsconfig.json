{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "composite": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["src/**/*.ts", "src/*.ts"]
}
