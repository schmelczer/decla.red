{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "typings"]
}
